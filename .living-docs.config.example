# living-docs Configuration Example
# Copy this to .living-docs.config and customize

version: 1.0

project:
  name: "my-project"
  type: "ai"  # or "standard"

paths:
  docs: "docs"              # or ".claude/docs", ".github/docs", etc.
  bugs: "bugs.md"          # or ".claude/bugs.md", "issues.md", etc.
  project_file: "CLAUDE.md" # or "PROJECT.md" for standard projects

spec_system: "github-spec-kit"  # or "bmad-method", "agent-os", "none", "custom"

auto_update: true
update_frequency: "weekly"  # "daily", "weekly", "monthly", "manual"

# Optional: Custom settings for your spec system
spec_config:
  github_spec_kit:
    include_workflows: true
    include_issue_templates: true
  bmad_method:
    phases: ["plan", "execute"]
    agents: ["analyst", "developer", "tester"]

# Optional: Team settings
team:
  lead: "your-github-username"
  repository: "https://github.com/user/repo"

created: "2025-09-14"